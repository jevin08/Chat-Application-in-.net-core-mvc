@using MvcChat.Models
@model List<MvcChat.Models.ApplicationUser>

@{
	ViewData["Title"] = "Home Page";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.Count == 0){
	<br/>
	<h2>You do not have any connection! </h2>
	<p>Don't worry switch to connection page to get started. <a asp-action="Connection">create new Connections.</a></p>
}

<div class="container w-100 rounded h-100 border border-light border-3 rounded">
	<div class="row overflow-visible">
		<div class="col-lg-3 col-sm-5 col-12">
			<div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-white mt-2 gap-2 " style="min-width:230px">
				@*<div class="container-fluid ms-2">
					<form class="d-flex">
						<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn btn-outline-success" type="submit">Search</button>
					</form>
				</div>*@
				<div class="list-group list-group-flush border-bottom scrollarea d-grid gap-1">
				@foreach (var item in Model)
				{
					var activeClass="";
						if (ViewBag.friend!=null && item.Id == ViewBag.friend.Id)
							activeClass = "active";
						<a asp-action="Chat" asp-route-id="@item.Id" class="list-group-item list-group-item-action @activeClass lh-tight" aria-current="true">
						<div class="d-flex w-100 align-items-center justify-content-between position-relative">
							<div class="card-body" style="padding:0;">
								<h4 class="card-title">
								@if (item.ProfilePicture != null)
								{
									<img class="card-img-left" style="max-width: 50px;max-height:50px;border-radius: 50%;" src="data:image/*;base64,@(Convert.ToBase64String(item.ProfilePicture))">
								}
								else
								{
									<img class="card-img-left" style="max-width: 50px;max-height:50px;border-radius: 50%;" src="data:image/png;base64," />
								}
								<label for="UserName">@item.FirstName @item.LastName</label>
								</h4>
								<p class="card-text position-absolute bottom-0 end-0" style="">@item.Email</p>
							</div>
						</div>
					</a>
				}
				</div>
			</div>
		</div>


		@if (ViewBag.friend != null)
		{
			<div class="col border border-light border-3 h-100">
				<div class="position-relative col-message-box w-100" style="background: url(https://img.freepik.com/free-vector/vintage-ornamental-flowers-background_52683-28040.jpg)">
					<div class="row row-header p-2" style="background: #fff;">
						<!-- other user info -->
						<div class="d-flex w-100 align-items-center justify-content-between">
							<div class="card-body" style="padding:0;">
								<h4 class="card-title mb-0">
									@if (ViewBag.friend.ProfilePicture != null)
									{
										<img class="card-img-left" style="max-width: 50px;max-height:50px;border-radius: 50%;" src="data:image/*;base64,@(Convert.ToBase64String(ViewBag.friend.ProfilePicture))">
									}
									else
									{
										<img class="card-img-left" style="max-width: 50px;max-height:50px;border-radius: 50%;" src="data:image/png;base64," />
									}
									<label for="UserName">@ViewBag.friend.FirstName @ViewBag.friend.LastName</label>
								</h4>
							</div>
						</div>
					</div>
					<div class="row mt-2">
						<div class="row-content overflow-auto" id="chat-content-box">
							<!-- View Chat -->
							@foreach(var msg in ViewBag.chat){
								var msgPosClassName = "message-card-right float-end";
								@if (msg.CommenterId == ViewBag.friend.Id)
								{
									msgPosClassName = "message-card-left float-start";
								}
								<div class="clearfix">
									<div class="@msgPosClassName">
										<div class="message-card-title">
											@msg.SendTime.ToShortTimeString()
										</div>
										<div class="message-card-body">
											@msg.Text
										</div>
									</div>
								</div>
							}
						</div>
					</div>
					<div class="row row-footer bottom-0">
						<!-- Send Message Form -->

						<form asp-action="SendMessage" method="post" asp-controller="Home">
							<div class="input-group">
								<input name="Text" class="form-control" autocomplete="comment" aria-required="true" placeholder="Leave comment here">
								<input name="UserId" class="form-control" hidden value="@ViewBag.friend.Id" />
								<input name="CommenterId" class="form-control" hidden value="@ViewBag.currentUser.Id"/>
								<button type="submit" class="input-group-btn input-group-text btn-primary">
									<svg width="16" height="16" fill="currentColor" class="bi bi-send-fill" viewBox="0 0 16 16">
										<path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z" />
									</svg>
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		}
	</div>
</div>